{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "watch": {
      "cache": false,
      "inputs": ["src/*.ts"],
      "dependsOn": ["bar#build"]
    },
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "inputs": ["src/**/*.ts"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build"]
    }
  }
}